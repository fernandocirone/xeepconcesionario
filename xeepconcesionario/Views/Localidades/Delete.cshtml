@model Localidad

@{
    ViewData["Title"] = "Eliminar Localidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">⚠️ Eliminar Localidad</h4>
                </div>
                <div class="card-body">
                    <p class="mb-4 text-muted">
                        ¿Estás seguro de que deseas eliminar esta localidad? Esta acción no se puede deshacer.
                    </p>

                    <table class="table table-sm table-striped">
                        <tbody>
                            <tr>
                                <th>Nombre de Localidad</th>
                                <td>@Model.NombreLocalidad</td>
                            </tr>
                            <tr>
                                <th>Código Postal</th>
                                <td>@Model.CodigoPostal</td>
                            </tr>
                            <tr>
                                <th>Provincia</th>
                                <td>@Model.Provincia?.NombreProvincia</td>
                            </tr>
                            <tr>
                                <th>Región</th>
                                <td>@Model.Region?.NombreRegion</td>
                            </tr>
                        </tbody>
                    </table>

                    <form asp-action="Delete" class="mt-3">
                        <input type="hidden" asp-for="LocalidadId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                ⬅️ Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-danger">
                                🗑️ Eliminar Localidad
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
