@model Cobro

@{
    ViewData["Title"] = "Eliminar Cobro";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">⚠️ Eliminar Cobro</h4>
                </div>
                <div class="card-body">
                    <p class="mb-4 text-muted">
                        ¿Estás seguro de que deseas eliminar este cobro? Esta acción no se puede deshacer.
                    </p>

                    <table class="table table-sm table-striped">
                        <tbody>
                            <tr>
                                <th>Usuario</th>
                                <td>@Model.UsuarioId</td>
                            </tr>
                            <tr>
                                <th>Fecha</th>
                                <td>@Model.Fecha.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <th>Monto</th>
                                <td>@Model.Monto.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Solicitud</th>
                                <td>@Model.Solicitud?.SolicitudId</td>
                            </tr>
                            <tr>
                                <th>Cuota</th>
                                <td>@Model.Cuota?.CuotaId</td>
                            </tr>
                        </tbody>
                    </table>

                    <form asp-action="Delete" class="mt-3">
                        <input type="hidden" asp-for="CobroId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                ⬅️ Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-danger">
                                🗑️ Eliminar Cobro
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
