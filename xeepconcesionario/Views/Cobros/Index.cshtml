@model IEnumerable<Cobro>

@{
    ViewData["Title"] = "Cobros";

    decimal totalMonto = Model?.Sum(c => c.Monto) ?? 0m;
    int totalRegistros = Model?.Count() ?? 0;

    // Fecha de hoy en formato yyyy-MM-dd para input type="date"
    string hoy = DateTime.Today.ToString("yyyy-MM-dd");
}

<div class="container-fluid">

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h2 class="text-primary m-0">COBROS</h2>
    </div>

    @{
        string fechaDesde = ViewBag.FechaDesde ?? DateTime.Today.ToString("yyyy-MM-dd");
        string fechaHasta = ViewBag.FechaHasta ?? DateTime.Today.ToString("yyyy-MM-dd");
    }

    <form method="get" class="mb-3 d-flex align-items-end gap-2 flex-wrap">
        <div>
            <label for="fechaDesde" class="form-label">Desde</label>
            <input type="date" id="fechaDesde" name="fechaDesde"
                   value="@fechaDesde" class="form-control form-control-sm" />
        </div>
        <div>
            <label for="fechaHasta" class="form-label">Hasta</label>
            <input type="date" id="fechaHasta" name="fechaHasta"
                   value="@fechaHasta" class="form-control form-control-sm" />
        </div>
        <div>
            <label for="numeroCuota" class="form-label">N° Cuota</label>
            <input type="number" id="numeroCuota" name="numeroCuota"
                   value="@(ViewBag.NumeroCuota ?? "")"
                   class="form-control form-control-sm" min="1" />
        </div>

        <div>
            <label for="nombreSupervisor" class="form-label">Supervisor</label>
            <input type="text" id="nombreSupervisor" name="nombreSupervisor"
                   value="@(ViewBag.NombreSupervisor ?? "")"
                   class="form-control form-control-sm" min="1" />
        </div>

        <div>
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="bi bi-search"></i> Filtrar
            </button>
        </div>
        <div>
            <a asp-action="ExportarExcel"
               asp-route-fechaDesde="@fechaDesde"
               asp-route-fechaHasta="@fechaHasta"
               asp-route-numeroCuota="@ViewBag.NumeroCuota"
               asp-route-nombreSupervisor="@ViewBag.NombreSupervisor"
               class="btn btn-success btn-sm">
                <i class="bi bi-file-earmark-excel"></i> Exportar a Excel
            </a>
        </div>

    </form>


    <!-- Tabla -->
    <div class="table-responsive" style="max-height:65vh; overflow:auto;">
        @if (!Model.Any())
        {
            <div class="alert alert-info m-0">No hay cobros registrados.</div>
        }
        else
        {
            <table class="table table-sm table-striped table-hover table-bordered align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Fecha</th>
                        <th>Monto</th>
                        <th>Solicitud</th>
                        <th>Cliente</th>
                        <th>Cuota</th>
                        <th>Supervisor</th>
                        <th>Usuario</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>@item.Monto.ToString("C")</td>
                            <td>@(item.Solicitud?.NumeroSolicitud.ToString() ?? "-")</td>
                            <td>@(item.Solicitud?.Cliente?.ApellidoYNombre ?? "-")</td>
                            <td>
                                @(item.Cuota != null ? $"N° {item.Cuota.Numerocuota}" : "-")
                            </td>
                            <td>@(item.Solicitud?.Supervisor?.NombreCompleto ?? "-")</td>
                            <td>
                                @(item.Usuario != null
                                    ? (!string.IsNullOrWhiteSpace(item.Usuario.NombreCompleto) ? item.Usuario.NombreCompleto
                                    : !string.IsNullOrWhiteSpace(item.Usuario.UserName) ? item.Usuario.UserName
                                    : item.Usuario.Email ?? "-")
                                    : "-")
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CobroId" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CobroId" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Resumen -->
    <div class="mt-3 d-flex justify-content-end">
        <div class="border rounded p-3 bg-light d-flex gap-4">
            <div><strong>Registros:</strong> @totalRegistros</div>
            <div><strong>Total cobrado:</strong> @totalMonto.ToString("C")</div>
        </div>
    </div>

</div>
