@model IEnumerable<Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container-fluid">

    <div class="d-flex flex-column" style="height: 80vh;">
        <!-- altura total asignada al contenedor -->
        <!-- Encabezado + Filtros -->
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
            <h2 class="text-primary m-0">CLIENTES</h2>

            <div class="d-flex align-items-center gap-2 ms-auto">
                <input type="text" class="form-control form-control-sm" id="filtroNombre" placeholder="Buscar por nombre" />
                <input type="text" class="form-control form-control-sm" id="filtroDni" placeholder="Buscar por DNI" />
                <input type="hidden" class="hidden" id="filtroRegion" placeholder="Buscar por región" />

            </div>

            <div class="d-flex gap-2">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#filtroModal">
                    <i class="bi bi-funnel-fill"></i> Más Filtros
                </button>
                <a asp-controller="Localidades" asp-action="Index" class="btn btn-success btn-sm">
                    <i class="bi bi-geo-alt-fill"></i> Localidades
                </a>
                <auth-button policy="Clientes.Crear">
                    <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#modalCrearCliente">
                        <i class="bi bi-person-plus-fill"></i> Nuevo Cliente
                    </button>
                </auth-button>

            </div>
        </div>

        <!-- Tabla con scroll interno -->
        <div id="tablaClientes" class="table-responsive flex-grow-1 overflow-auto border rounded" style="min-height: 0;">
            @await Html.PartialAsync("_TablaClientes", Model)
        </div>

        <!-- Botones de acción abajo -->
        <div class="mt-3 d-flex justify-content-end gap-2">
            <auth-button policy="Clientes.Editar">
               <button id="btnEditar" class="btn btn-warning" disabled>Editar</button>
            </auth-button>
            <auth-button policy="Clientes.Eliminar">
                <button id="btnEliminar" class="btn btn-danger" disabled>Eliminar</button>
            </auth-button>
            <button id="btnDetalles" class="btn btn-info" disabled>Detalles</button>
        </div>

    </div>

    <div class="modal fade" id="modalCrearCliente" tabindex="-1" aria-labelledby="modalCrearClienteLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable modal-dialog-centered">
            <div class="modal-content shadow">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="modalCrearClienteLabel">Nuevo Cliente</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    @await Html.PartialAsync("_FormCliente", new Cliente())
                </div>
            </div>
        </div>
    </div>

    @{
        var cliente = new Cliente();
        ViewData["LocalidadId"] = ViewBag.LocalidadId;
    }

        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }



    <!-- Modal de filtros avanzados -->
    <div class="modal fade" id="filtroModal" tabindex="-1" aria-labelledby="filtroModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <form method="get" asp-action="Index">
                    <div class="modal-header">
                        <h5 class="modal-title" id="filtroModalLabel">Filtrar Clientes</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="ApellidoYNombre" class="form-label">Apellido y Nombre</label>
                                <input type="text" class="form-control" id="ApellidoYNombre" name="ApellidoYNombre" />
                            </div>
                            <div class="col-md-4">
                                <label for="Dni" class="form-label">DNI</label>
                                <input type="text" class="form-control" id="Dni" name="Dni" />
                            </div>
                            <div class="col-md-4">
                                <label for="Mail" class="form-label">Mail</label>
                                <input type="text" class="form-control" id="Mail" name="Mail" />
                            </div>
                            <div class="col-md-4">
                                <label for="Region" class="form-label">Region</label>
                                <input type="text" class="form-control" id="Region" name="Region" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Aplicar Filtros</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<!-- Scripts -->
<script>
    let idSeleccionado = null;

    function inicializarSeleccionFila() {
        document.querySelectorAll(".fila-cliente").forEach(fila => {
            fila.addEventListener("click", () => {
                document.querySelectorAll(".fila-cliente").forEach(f => f.classList.remove("table-primary"));
                fila.classList.add("table-primary");
                idSeleccionado = fila.dataset.id;

                document.getElementById("btnEditar").disabled = false;
                document.getElementById("btnDetalles").disabled = false;
                document.getElementById("btnEliminar").disabled = false;
            });
        });
    }

    inicializarSeleccionFila();

    document.getElementById("btnEditar").addEventListener("click", () => {
        if (idSeleccionado) window.location.href = `/Clientes/Edit/${idSeleccionado}`;
    });

    document.getElementById("btnDetalles").addEventListener("click", () => {
        if (idSeleccionado) window.location.href = `/Clientes/Details/${idSeleccionado}`;
    });

    document.getElementById("btnEliminar").addEventListener("click", () => {
        if (idSeleccionado) window.location.href = `/Clientes/Delete/${idSeleccionado}`;
    });

    const debounce = (callback, delay = 300) => {
        let timer;
        return (...args) => {
            clearTimeout(timer);
            timer = setTimeout(() => callback(...args), delay);
        };
    };

    const buscarClientes = debounce(() => {
        const nombre = document.getElementById('filtroNombre').value;
        const dni = document.getElementById('filtroDni').value;
        const region = document.getElementById('filtroRegion').value;

        fetch(`/Clientes/FiltrarClientes?nombre=${encodeURIComponent(nombre)}&dni=${encodeURIComponent(dni)}&region=${encodeURIComponent(region)}`)
            .then(res => res.text())
            .then(html => {
                document.getElementById('tablaClientes').innerHTML = html;
                inicializarSeleccionFila(); // volver a enganchar los eventos
            });
    }, 300);

    document.getElementById('filtroNombre').addEventListener('input', buscarClientes);
    document.getElementById('filtroDni').addEventListener('input', buscarClientes);
    document.getElementById('filtroRegion').addEventListener('input', buscarClientes);
</script>
