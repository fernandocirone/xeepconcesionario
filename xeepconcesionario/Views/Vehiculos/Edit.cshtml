@model xeepconcesionario.Models.Vehiculo

@{
    ViewData["Title"] = "Editar Vehículo";
}

<div class="container mt-4">

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary m-0">
            <i class="bi bi-car-front-fill"></i> Editar Vehículo
        </h2>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" class="row g-3">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="col-md-4">
                    <label asp-for="Patente" class="form-label"></label>
                    <input asp-for="Patente" class="form-control" />
                    <span asp-validation-for="Patente" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Tipo" class="form-label"></label>
                    <select asp-for="Tipo" class="form-select"
                            asp-items="Html.GetEnumSelectList<xeepconcesionario.Models.TipoVehiculo>()">
                        <option value="">-- Seleccionar --</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger small"></span>
                </div>


                <div class="col-md-4">
                    <label asp-for="Modelo" class="form-label"></label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Año" class="form-label"></label>
                    <input asp-for="Año" class="form-control" />
                    <span asp-validation-for="Año" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Color" class="form-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PrecioCompra" class="form-label">Precio Compra</label>
                    <input asp-for="PrecioCompra" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="PrecioCompra" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Valor" class="form-label"></label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="FechaAlta" class="form-label"></label>
                    <input asp-for="FechaAlta" type="date" class="form-control" />
                    <span asp-validation-for="FechaAlta" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Observacion" class="form-label"></label>
                    <textarea asp-for="Observacion" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Observacion" class="text-danger small"></span>
                </div>

                <!-- Botones -->
                <div class="col-12 d-flex justify-content-end gap-2 mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2-circle"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
