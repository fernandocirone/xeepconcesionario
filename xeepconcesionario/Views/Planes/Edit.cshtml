@model Plan

@{
    ViewData["Title"] = "Editar Plan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">✏️ Editar Plan</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="PlanId" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Codigo" class="form-label"></label>
                                <input asp-for="Codigo" class="form-control" />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Modelo" class="form-label"></label>
                                <input asp-for="Modelo" class="form-control" />
                                <span asp-validation-for="Modelo" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CuotaApertura" class="form-label"></label>
                                <input asp-for="CuotaApertura" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="CuotaApertura" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="AdelantoMensual" class="form-label"></label>
                                <input asp-for="AdelantoMensual" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="AdelantoMensual" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Sellado" class="form-label"></label>
                                <input asp-for="Sellado" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Sellado" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CuotaIngreso" class="form-label"></label>
                                <input asp-for="CuotaIngreso" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="CuotaIngreso" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">⬅️ Volver</a>
                            <button type="submit" class="btn btn-primary">💾 Guardar cambios</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
