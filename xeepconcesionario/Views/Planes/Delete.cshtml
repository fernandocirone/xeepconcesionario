@model Plan

@{
    ViewData["Title"] = "Eliminar Automóvil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">⚠️ Eliminar Automóvil</h4>
                </div>
                <div class="card-body">
                    <p class="mb-4 text-muted">
                        ¿Estás seguro de que deseas eliminar este automóvil? Esta acción no se puede deshacer.
                    </p>

                    <table class="table table-sm table-striped">
                        <tbody>
                            <tr>
                                <th>Código</th>
                                <td>@Model.Codigo</td>
                            </tr>
                            <tr>
                                <th>Modelo</th>
                                <td>@Model.Modelo</td>
                            </tr>
                            <tr>
                                <th>Cuota de Apertura</th>
                                <td>@Model.CuotaApertura.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Adelanto Mensual</th>
                                <td>@Model.AdelantoMensual.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Sellado</th>
                                <td>@Model.Sellado.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Cuota de Ingreso</th>
                                <td>@Model.CuotaIngreso.ToString("C")</td>
                            </tr>
                        </tbody>
                    </table>

                    <form asp-action="Delete" class="mt-3">
                        <input type="hidden" asp-for="PlanId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                ⬅️ Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-danger">
                                🗑️ Eliminar Automóvil
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
