@model CondicionVenta

@{
    ViewData["Title"] = "Eliminar Condición de Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">⚠️ Eliminar Condición de Venta</h4>
                </div>
                <div class="card-body">
                    <p class="mb-4 text-muted">
                        ¿Estás seguro de que deseas eliminar esta condición de venta?
                        Esta acción no se puede deshacer.
                    </p>

                    <table class="table table-sm table-striped">
                        <tbody>
                            <tr>
                                <th>Nombre Condición de Venta</th>
                                <td>@Model.NombreCondicionVenta</td>
                            </tr>
                        </tbody>
                    </table>

                    <form asp-action="Delete" class="mt-3">
                        <input type="hidden" asp-for="CondicionVentaId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                ⬅️ Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-danger">
                                🗑️ Eliminar Condición de Venta
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
