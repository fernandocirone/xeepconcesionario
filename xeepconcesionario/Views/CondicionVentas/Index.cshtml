@model IEnumerable<CondicionVenta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#modalCrearCondicionVenta">
    <i class="bi bi-file-earmark-plus-fill"></i> Nueva Condición de Venta
</button>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCondicionVenta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCondicionVenta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CondicionVentaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CondicionVentaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CondicionVentaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="modal fade" id="modalCrearCondicionVenta" tabindex="-1" aria-labelledby="modalCrearCondicionVentaLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalCrearCondicionVentaLabel">Nueva Condición de Venta</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_FormCondicionVenta", new CondicionVenta())
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


