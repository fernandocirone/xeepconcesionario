@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LAB Automotores</title>

    <!-- Bootstrap CSS desde CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/xeepconcesionario.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/jpg" href="~/images/logoxeep.jpg" />

    <style>
        /* Navbar personalizado */
        .navbar {
            background: linear-gradient(90deg, #008085, #0069d9);
        }

        .navbar-brand {
            font-weight: 700;
            color: #fff !important;
        }

        .navbar-nav .nav-link {
            color: #e0e0e0 !important;
            margin-right: .75rem;
            text-decoration: none !important;
        }

            .navbar-nav .nav-link:hover {
                color: #ffffff !important;
                font-weight: 500;
                text-decoration: none !important;
            }

        /* Footer */
        footer {
            background-color: #004085;
            color: #ddd;
            padding: 1rem 0;
        }

            footer a {
                color: #9ec5fe;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    🚗 Automotores
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <auth-link policy="Solicitudes.Ver">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Solicitudes" asp-action="Index">📄 Solicitudes</a>
                                </li>
                            </auth-link>

                            <auth-link policy="Vehiculos.Ver">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Vehiculos" asp-action="Index">🚘 Vehículos</a>
                                </li>
                            </auth-link>

                            <auth-link policy="Cobros.Ver">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cobros" asp-action="Index">💵 Cobros</a>
                                </li>
                            </auth-link>

                            <auth-link policy="Cuotas.Ver">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cuotas" asp-action="Index">🧾 Cuotas</a>
                                </li>
                            </auth-link>

                            <auth-link policy="Usuarios.Ver">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">👤 Usuarios</a>
                                </li>
                            </auth-link>

                            <auth-link policy="Configuraciones.Ver">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Configuraciones" asp-action="Index">⚙️ Configuraciones</a>
                                </li>
                            </auth-link>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENIDO -->
    <div class="container-fluid">
        <main style="margin-top:10px" role="main">
            @RenderBody()
        </main>
    </div>

    <!-- jQuery y Bootstrap JS desde CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
